rule "StatoModoLavoroCorrenteZ1"
when
    Item StatoInternoHZ1 received update or 
    Item StatoInternoGZ1 received update
then
    if (StatoInternoHZ1.state == 0 && StatoInternoGZ1.state == 0) {
        StatoModoLavoroCorrenteZ1.postUpdate(0) //Automatico
    }	
    else if (StatoInternoHZ1.state == 1 && StatoInternoGZ1.state == 0) {
        StatoModoLavoroCorrenteZ1.postUpdate(1) //Off-Antigelo
    }
    else if (StatoInternoHZ1.state == 0 && StatoInternoGZ1.state == 1) {
        StatoModoLavoroCorrenteZ1.postUpdate(2) //Economy       
    }
    else if (StatoInternoHZ1.state == 1 && StatoInternoGZ1.state == 1) {
        StatoModoLavoroCorrenteZ1.postUpdate(3) //Comfort
    }
end

